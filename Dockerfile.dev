FROM rust:latest

# Install system dependencies including Python (required for PyO3)
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    ca-certificates \
    python3 \
    python3-dev \
    libpython3-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Rust components (rustfmt and clippy)
RUN rustup component add rustfmt clippy

# Set working directory
WORKDIR /app

# Default command (interactive bash)
# Developers will run commands manually inside the container
CMD ["/bin/bash"]

